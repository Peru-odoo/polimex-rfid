<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_rfid_ctrl_th_log_tree_view" model="ir.ui.view">
            <field name="name">hr.rfid.ctrl.th.log.tree.view</field>
            <field name="model">hr.rfid.ctrl.th.log</field>
            <field name="arch" type="xml">
                <tree string="Temperature and Humidity List" create="0" delete="0">
<!--                      decoration-success="state == 'normal'"-->
<!--                      decoration-warning="state in ['short','open']"-->
<!--                      decoration-info="state == 'disabled'"-->
<!--                      decoration-danger="state in ['s1','s2','s12']">-->
                    <field name="event_time"/>
                    <field name="th_id"/>
                    <field name="temperature" optional="show"/>
                    <field name="humidity" optional="show"/>
               </tree>
            </field>
        </record>

        <record id="hr_rfid_ctrl_th_log_graph_view" model="ir.ui.view">
            <field name="name">r.rfid.ctrl.th.log.graph.view</field>
            <field name="model">hr.rfid.ctrl.th.log</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <graph string="Temperature and Humidity Log" type="line" sample="1" stacked="False">
                    <field name="event_time" interval="day" type="col"/>
                    <field name="humidity" type="measure"/>
                    <field name="temperature" type="measure"/>
                    <field name="th_id" type="row"/>
                </graph>
            </field>
        </record>

        <record id="hr_rfid_ctrl_th_log_pivot_view" model="ir.ui.view">
            <field name="name">hr.rfid.ctrl.th.log.pivot.view</field>
            <field name="model">hr.rfid.ctrl.th.log</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <pivot string="Temperature and Humidity Log" sample="1">
                    <field name="event_time" interval="day" type="col"/>
                    <field name="temperature" type="measure"/>
                    <field name="humidity" type="measure"/>
                    <field name="th_id" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="hr_rfid_ctrl_th_log_search_view" model="ir.ui.view">
            <field name="name">hr.rfid.ctrl.th.log.search.view</field>
            <field name="model">hr.rfid.ctrl.th.log</field>
            <field name="arch" type="xml">
                <search>
                    <field name="th_id"/>
                    <filter string="Measure time" name="filter_event_time" date="event_time" default_period="last_month"/>
                    <filter name="filter_this_day" string="Measures from today"
                            domain="[('event_time', '&gt;=',  (context_today()).strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                    <filter name="filter_this_week" string="Measures from this week"
                            domain="[('event_time', '&gt;=', (context_today()-datetime.timedelta(days=context_today().weekday())).strftime('%%Y-%%m-%%d')),('event_time', '&lt;=', (context_today()-datetime.timedelta(days=context_today().weekday())+ datetime.timedelta(days=6)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter name="filter_this_month" string="Measures from this month"
                            domain="[('event_time', '&gt;=', context_today().strftime('%%Y-%%m-1'))]"/>
                    <filter name="filter_this_year" string="Measures from this year"
                            domain="[('event_time', '&gt;=', (datetime.date(datetime.date.today().year, 1, 1)).strftime('%%Y-%%m-%%d')),('event_time', '&lt;=', (datetime.date(datetime.date.today().year, 12, 31)).strftime('%%Y-%%m-%%d'))]"/>
                    <separator/>
                    <filter name="filter_this_day" string="Measures from Yesterday"
                            domain="[('event_time', '&gt;=',  (context_today()-datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d 00:00:00')),('event_time', '&lt;=',  (context_today()-datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                    <filter name="filter_last_week" string="Measures from last week"
                            domain="[('event_time', '&gt;=', (context_today()-datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter name="filter_last_month" string="Measures from last month"
                            domain="[('event_time', '&gt;=', (context_today()-datetime.timedelta(days=30)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter name="filter_last_year" string="Measures from last year"
                            domain="[('event_time', '&gt;=', (context_today()-datetime.timedelta(days=365)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter string="by Sensor" name="groupby_sensor"
                                context="{'group_by':'th_id'}"/>
                    <searchpanel>
                        <field name="th_id" icon="fa-info-circle" color="#875A7B"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="hr_rfid_ctrl_th_log_action" model="ir.actions.act_window">
            <field name="name">Temperature and Humidity Log</field>
            <field name="res_model">hr.rfid.ctrl.th.log</field>
            <field name="view_mode">graph,pivot,tree</field>
        </record>

    </data>
</odoo>