        <record id="hr_view_partner_form_inherit_hr_rfid" model="ir.ui.view">
            <field name="name">res.partner.rfid.info</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                     <button name="button_partner_events"
                            type="object" attrs="{'invisible':[('partner_event_count', '=', '0')]}"
                            class="oe_stat_button" icon="fa-list-alt">
                        <field name="partner_event_count" widget="statinfo" string="Events"/>
                    </button>
                     <button name="button_doors_list" title="Accessible doors"
                             type="object" class="oe_stat_button" icon="fa-list-alt"
                             groups="hr_rfid.hr_rfid_view_rfid_data" attrs="{'invisible':[('partner_doors_count', '=', '0')]}">
                        <field name="partner_doors_count" widget="statinfo" string="Doors"/>
                    </button>
                </xpath>
                <notebook position="inside">
                    <page string="RFID Info"
                          groups="hr_rfid.hr_rfid_view_rfid_data"
                          attrs="{'invisible':['|',('is_company','=',True), ('is_employee', '=', True)]}">
                        <field name="is_employee" invisible="0"/>
                        <group string="Settings">
                            <field name="hr_rfid_pin_code" groups="hr_rfid.hr_rfid_view_rfid_pin_code_data"/>
                        </group>
                        <notebook>
                            <page string="Cards">
                                <field name="hr_rfid_card_ids" context="{'contact_id': id}" edit="0">
                                    <tree string="Cards belonging to user">
                                        <field name="number"/>
                                        <field name="card_type"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Access Groups">
                                <field name="hr_rfid_access_group_ids" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="access_group_id"/>
                                        <field name="expiration"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Events">
                                <field name="hr_rfid_event_ids" readonly="1">
                                    <tree>
                                        <field name="event_action"/>
                                        <field name="door_id"/>
                                        <field name="card_id"/>
                                        <field name="event_time"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </page>
                </notebook>
            </field>
        </record>

         <record id="view_res_partner_filter_inherit" model="ir.ui.view">
            <field name="name">res.partner.select.inherit</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                   <field name="hr_rfid_card_ids" filter_domain="[('hr_rfid_card_ids.number', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
