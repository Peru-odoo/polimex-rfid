<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
  <data>

    <record id="hr_rfid_vending_management" model="ir.module.category">
      <field name="name">Vending Access</field>
      <field name="description">User right for the Vending module</field>
      <field name="sequence">4</field>
    </record>

    <record id="hr_rfid_vending.group_customer_own_dep" model="res.groups">
      <field name="name">Vending Customer (Own Department)</field>
      <field name="category_id" ref="hr_rfid_vending_management" />
    </record>

    <record id="group_customer" model="res.groups">
      <field name="name">Vending Customer</field>
      <field name="implied_ids" eval="[(4, ref('hr_rfid_vending.group_customer_own_dep'))]" />
      <field name="category_id" ref="hr_rfid_vending_management" />
    </record>

    <record id="group_operator" model="res.groups">
      <field name="name">Vending Operator</field>
      <field name="implied_ids" eval="[(4, ref('hr_rfid_vending.group_customer'))]" />
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
      <field name="category_id" ref="hr_rfid_vending_management" />
    </record>

    <record id="group_operator_own_dep" model="res.groups">
      <field name="name">Vending Operator (Own Department)</field>
      <field name="implied_ids" eval="[(4, ref('hr_rfid_vending.group_customer_own_dep'))]" />
      <field name="category_id" ref="hr_rfid_vending_management" />
    </record>

    <record id="hr_rfid_vending_operator_department_vending_events_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID Vending: Only show department's vending events</field>
      <field name="model_id" ref="hr_rfid_vending.model_hr_rfid_vending_event" />
      <field name="domain_force">
        [('employee_id.department_id.id','=',user.employee_ids.department_id.id)]
      </field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_vending.group_operator_own_dep')])]" />
      <field name="perm_create" eval="0"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

    <record id="hr_rfid_vending_customer_department_vending_events_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID Vending: Only show department's vending events</field>
      <field name="model_id" ref="hr_rfid_vending.model_hr_rfid_vending_event" />
      <field name="domain_force">
        [('employee_id.department_id.id','=',user.employee_ids.department_id.id),('employee_id','!=',False)]
      </field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_vending.group_customer_own_dep')])]" />
      <field name="perm_create" eval="0"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

    <record id="hr_rfid_vending_events_customer_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID Vending: Hide non-employee events from customer group</field>
      <field name="model_id" ref="hr_rfid_vending.model_hr_rfid_vending_event" />
      <field name="domain_force">[('employee_id','!=',False)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_vending.group_customer')])]" />
      <field name="perm_create" eval="0" />
      <field name="perm_write" eval="0" />
      <field name="perm_unlink" eval="1" />
      <field name="perm_read" eval="1" />
    </record>

    <record id="hr_rfid_vending_events_operator_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID Vending: Hide non-employee events from customer group</field>
      <field name="model_id" ref="hr_rfid_vending.model_hr_rfid_vending_event" />
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_vending.group_operator')])]" />
      <field name="perm_create" eval="0" />
      <field name="perm_write" eval="0" />
      <field name="perm_unlink" eval="1" />
      <field name="perm_read" eval="1" />
    </record>

    <record id="hr_rfid_vending_department_vending_balance_history_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID Vending: Only show department's balance histories</field>
      <field name="model_id" ref="hr_rfid_vending.model_hr_rfid_vending_balance_history" />
      <field name="domain_force">[('employee_id.department_id.id','=',user.employee_ids.department_id.id)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_vending.group_customer_own_dep')])]" />
      <field name="perm_create" eval="0"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

    <record id="hr_rfid_vending_vending_balance_history_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID Vending: Show all balance histories to customers and operators</field>
      <field name="model_id" ref="hr_rfid_vending.model_hr_rfid_vending_balance_history" />
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_vending.group_customer')])]" />
      <field name="perm_create" eval="0"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

  </data>
</odoo>
